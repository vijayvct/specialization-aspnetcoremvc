
@model IEnumerable<Book>

	<h2>Book Index Page</h2>

	<p>List of books to be displayed</p>

	<table class="table">
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Author</th>
			<th></th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Title</td>
				<td>@item.Author</td>
				<td>
					<a asp-controller="Books" asp-action="Details" asp-route-id="@item.Id">
						Details
					</a>
				</td>
			</tr>
		}
	</table>

	<a asp-controller="Books" asp-action="Create">Add New Book</a>	

	@*@Html.ActionLink("Add New Book","Create","Books")*@
	


