@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *,BookStoreMVCAPP
@model IEnumerable<BookStoreMVCAPP.Models.Book>


<html>
	<head>
		<link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css"/>
	</head>
	<body>
	<h2>Book Index Page</h2>

	<p>List of books to be displayed</p>

	<table class="table">
		<tr>
			<th>ID</th>
			<th>Title</th>
			<th>Author</th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Title</td>
				<td>@item.Author</td>
			</tr>
		}
	</table>

	<a asp-controller="Books" asp-action="Create">Add New Book</a>	

	@*@Html.ActionLink("Add New Book","Create","Books")*@
	</body>
</html>

